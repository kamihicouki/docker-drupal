FROM drupal:7-fpm

RUN \
  php -r "readfile('http://files.drush.org/drush.phar');" > drush \
  && chmod +x drush \
  && mv drush /usr/local/bin \
  && drush -y init 

RUN \
  echo 'alias drush="sudo -u www-data drush"' >> ~/.bashrc
  
RUN \
  apt update \
  && apt install --yes mysql-client sudo

RUN \
  docker-php-ext-install \
    gd \
    mbstring \
    ftp \
    zip \
    mysql \
    opcache
